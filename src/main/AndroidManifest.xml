<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project5" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pizza_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pizza_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project5" >
        <activity
            android:name=".CurrentOrderActivity"
            android:exported="false"
            android:label="@string/current_order_title"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".StoreOrdersActivity"
            android:exported="false"
            android:label="@string/store_orders_title"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".PizzaCustomizationActivity"
            android:exported="false"
            android:label="@string/pizza_customizer_title"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:label="@string/main_menu_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>